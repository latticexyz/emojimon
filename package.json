{
  "name": "emojimon",
  "private": true,
  "scripts": {
    "build": "pnpm recursive run build",
    "dev": "pnpm run initialize && run-pty % pnpm run dev:node % pnpm run dev:client % pnpm run dev:contracts",
    "dev:client": "pnpm --filter 'client' run dev",
    "dev:contracts": "pnpm --filter 'contracts' run dev",
    "dev:node": "pnpm --filter 'contracts' run devnode",
    "initialize": "pnpm recursive run initialize",
    "test": "pnpm recursive run test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "eslint": "8.29.0",
    "rimraf": "^3.0.2",
    "run-pty": "^4.0.3",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": "18.x",
    "pnpm": "8.x"
  }
}
